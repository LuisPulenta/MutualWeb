@page "/RecoverPassword"
@if (loading)
{
    <Loading />
}
<div class="row">
    <div class="col-4 offset-4">
        <EditForm Model="emailDTO" OnValidSubmit="SendRecoverPasswordEmailTokenAsync">
            <DataAnnotationsValidator />
            <div class="card">
                <div class="card-header">
                    <span>
                        <i class="bi bi-key" /> Enviar email para recuperación de contraseña
                    </span>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label>Email:</label>
                        <div>
                            <InputText class="form-control" @bind-Value="@emailDTO.Email" />
                            <ValidationMessage For="@(() => emailDTO.Email)" />
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div>
                        <button class="btn btn-outline-sm btn-primary float-end mx-2" type="submit"><i class="bi bi-loop-square" /> Enviar</button>
                    </div>
                </div>
            </div>
        </EditForm>
    </div>
</div>
